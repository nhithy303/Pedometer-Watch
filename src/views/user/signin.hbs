<div class="h-100">
    <div class="container-fluid py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                    class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form method="POST" action="/signin" name="signin-form" onsubmit="return validateForm(event)">
                    <!-- Username input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" id="username" name="username" placeholder="Username"
                            class="form-control form-control-lg text-center" />
                    </div>
                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="password" id="password" name="password" placeholder="Password"
                            class="form-control form-control-lg text-center" />
                    </div>
                    <div id="error" style="display: none;">Invalid username or password!</div>
                    <!-- Signin button -->
                    <button type="submit" data-mdb-button-init data-mdb-ripple-init
                        class="btn btn-primary btn-lg btn-block w-100">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const validateForm = (e) => {
        const username = document.forms["signin-form"]["username"].value;
        const password = document.forms["signin-form"]["password"].value;
        if (username === "" || password === "") {
            alert("Lack of sign-in information!");
            e.preventDefault();
        }
    }

    // Show error line of failed signing in
    const errorLog = document.getElementById("error");
    if ('{{failed}}' !== '') {
        errorLog.style.display = "block";
    }
    else {
        errorLog.style.display = "none";
    }
</script>